<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text" />
    <style name="Text.ScreenTitle" parent="Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Description" parent="Text">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Field"/>
    <style name="Field.Base" parent="Field">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="buttonStyle">@style/NotCapsButton</item>
    </style>

    <style name="NotCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button"/>
    <style name="Button.Base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoadingIndicator"/>
    <style name="LoadingIndicator.Base" parent="LoadingIndicator">
        <item name="android:indeterminateTint">@color/green_project</item>
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
    </style>

</resources>